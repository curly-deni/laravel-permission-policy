{
    "name": "curly-deni/laravel-permission-policy",
    "description": "A lightweight Laravel package for reusable, trait-based policy checks supporting CRUD, ownership, and private resource access.",
    "keywords": [
        "laravel",
        "policy",
        "authorization",
        "permissions",
        "traits",
        "gates",
        "access control",
        "crud",
        "private resources",
        "ownership"
    ],
    "homepage": "https://github.com/curly-deni/laravel-permission-policy",
    "license": "MIT",
    "authors": [
        {
            "name": "Danila Mikhalev",
            "email": "danila@dan-mi.ru",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0||^12.0",
        "illuminate/auth": "^10.0||^11.0||^12.0",
        "illuminate/database": "^10.0||^11.0||^12.0",
        "spatie/laravel-permission": "^6.17"
    },
    "require-dev": {
        "laravel/pint": "^1.14"
    },
    "autoload": {
        "psr-4": {
            "Aesis\\PermissionPolicy\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Aesis\\PermissionPolicy\\PermissionPolicyServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
